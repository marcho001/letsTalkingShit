<div class="container col-12 bg-light pt-3">
  <div class="title d-flex justify-content-center mb-5">
    <h1 class="font-weight-bold display-3">Who Do You Wanna Talk?</h1>
  </div>
  <form method="post" action="/">
    <div class="wrapper d-flex justify-content-around mb-3">
      <div class="first d-flex flex-column align-items-center col-3 m-2" style="min-width:280px;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
          class="border rounded-lg shadow" alt="engineer" style="width:100%; height:70%;">
        <div class="m-3 d-flex">
          <input type="radio" class="m-2 align-self-center" name="job" value="engineer"
            style="width:30px; height:30px;">
          <label class="display-4 font-weight-bold">工程師</label>
        </div>
      </div>
      <div class="first d-flex flex-column align-items-center col-3 m-2" style="min-width:280px; ">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
          class="border rounded-lg shadow" alt="engineer" style="width:100%; height:70%;">
        <div class="m-3 d-flex">
          <input type="radio" class="m-2 align-self-center" name="job" value="designer"
            style="width:30px; height:30px;">
          <label class="display-4 font-weight-bold">設計師</label>
        </div>
      </div>
      <div class="first d-flex flex-column align-items-center col-3 m-2" style="min-width:280px;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
          class="border rounded-lg shadow" alt="engineer" style="width:100%; height:70%;">
        <div class="m-3 d-flex">
          <input type="radio" id="engineer" class="m-2 align-self-center" name="job" value="entrepreneur"
            style="width:30px; height:30px;">
          <label class="display-4 font-weight-bold">創業家</label>
        </div>
      </div>
    </div>
    <div class="results p-5 d-flex" style="height: 50%; min-width: 300px;">
      <div class="d-flex m-5 col-3">
        <button type="submit" class="btn btn-danger align-self-center"
          style="height: 80px; width: 250px; font-size: 30px;">Talking Shit Now</button>
      </div>
      {{#if trashTalk}}
      <div class="col-8 d-flex justify-content-center align-items-center alert alert-info" role="alert">
        <h1 class="display-4">
        {{trashTalk}}
        </h1>
      </div>
      {{/if}}
    </div>
  </form>
</div>
</div>